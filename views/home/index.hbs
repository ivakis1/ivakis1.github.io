<div class="container body-content span=0 offset=6">
    <div class="well custom-well">
        <form action="/" method="POST">

            <div class="form-group col-md-4 col-md-offset-4 ">
                <input type="text" class="form-control boxBorder" id="question" placeholder="What's your question?"
                       name="question" value="{{question}}" required>
            </div>

            <div class="form-group col-md-4 col-md-offset-4 ">
                <input type="text" disabled class="form-control boxBorder boxdisabled" id="answer" placeholder="Answer"
                       name="answer" value="{{answer}}" >
            </div>
            <div class="form-group col-md-4 col-md-offset-4">
                <button type="submit" class="btn btn-success btn btncolour btncolour2">Разбери!</button>
            </div>
        </form>

    </div>
</div>
